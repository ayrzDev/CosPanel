{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@umixpanel/ui": ["packages/ui/src/index.ts"],
      "@umixpanel/ui/*": ["packages/ui/src/*"],
      "@umixpanel/config": ["packages/config/src/index.ts"],
      "@umixpanel/config/*": ["packages/config/src/*"],
      "@umixpanel/types": ["packages/types/src/index.ts"],
      "@umixpanel/types/*": ["packages/types/src/*"]
    }
  }
}
